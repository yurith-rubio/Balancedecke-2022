<div class="share">
  {% if settings.share_facebook %}
    <a class="share__icon" target="_blank" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}" aria-label="{{ 'general.social.alt_text.share_on_facebook' | t }}">
      {% render 'icon-facebook' %}
      <span class="visually-hidden">{{ 'general.social.alt_text.share_on_facebook' | t }}</span>
    </a>
  {% endif %}

  {% if settings.share_twitter %}
    <a class="share__icon" target="_blank" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}" aria-label="{{ 'general.social.alt_text.share_on_twitter' | t }}">
      {% render 'icon-twitter' %}
      <span class="visually-hidden">{{ 'general.social.alt_text.share_on_twitter' | t }}</span>
    </a>
  {% endif %}

  {% if settings.share_pinterest %}
    <a class="share__icon" target="_blank" href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}" aria-label="{{ 'general.social.alt_text.share_on_pinterest' | t }}">
      {% render 'icon-pinterest' %}
      <span class="visually-hidden">{{ 'general.social.alt_text.share_on_pinterest' | t }}</span>
    </a>
  {% endif %}
</div>
