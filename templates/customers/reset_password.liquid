<section class="section account">
  <div class="account__auth-wrapper form-reset-password contrast">
    {% form 'reset_customer_password' %}

      <h1 class="type-heading-1">{{ 'customer.reset_password.title' | t }}</h1>
      <p class="mb4">{{ 'customer.reset_password.subtext' | t: email: email }}</p>

      {{ form.errors | default_errors }}

      <div class="relative">
        <input type="password"
          name="customer[password]"
          id="ResetPassword"
          class="input {% if form.errors contains 'password' %}input-error{% endif %}"
          placeholder="{{ 'customer.reset_password.password' | t }}">
        <label for="ResetPassword" class="label--above">
          {{ 'customer.reset_password.password' | t }}
        </label>
      </div>

      <div class="relative">
        <input type="password"
          name="customer[password_confirmation]"
          id="PasswordConfirmation"
          class="input {% if form.errors contains 'password_confirmation' %}input-error{% endif %}"
          placeholder="{{ 'customer.reset_password.password_confirm' | t }}">
        <label for="PasswordConfirmation" class="label--above">
          {{ 'customer.reset_password.password_confirm' | t }}
        </label>
      </div>

      <input type="submit" class="bttn bttn--full" value="{{ 'customer.reset_password.submit' | t }}">
    {% endform %}
  </div>
</section>